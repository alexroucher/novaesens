<script>
  function animateNumber(element, target, duration = 2000, decimals = 0) {
    let start = 0;
    const end = Number(target);
    const startTime = performance.now();
    
    function update(currentTime) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      
      // Easing function
      const easeOutQuad = progress * (2 - progress);
      const current = start + (end - start) * easeOutQuad;
      
      element.textContent = decimals > 0 ? current.toFixed(decimals) : Math.floor(current);
      
      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }
    
    requestAnimationFrame(update);
  }

  function startAnimationWhenVisible(entries, observer) {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const element = entry.target;
        const target = element.getAttribute('data-target');
        const decimals = target.includes('.') ? 2 : 0;
        animateNumber(element, target, 2000, decimals);
        observer.unobserve(element);
      }
    });
  }

  // Set up Intersection Observer
  const observer = new IntersectionObserver(startAnimationWhenVisible, {
    threshold: 0.1
  });

  // Observe all stat numbers
  document.querySelectorAll('.stat-number').forEach(stat => {
    observer.observe(stat);
  });

  // Animation de déplacement des cartes accompagnement au scroll (desktop uniquement)
  let scrollAnimationId: number | null = null;
  let resizeListener: (() => void) | null = null;
  
  function initCardScrollAnimation() {
    if (window.innerWidth <= 768) return; // Pas d'animation sur mobile
    
    const cards = document.querySelectorAll('.accompagnement-card') as NodeListOf<HTMLElement>;
    if (!cards.length) return;
    
    function updateCardPositions() {
      if (scrollAnimationId) return; // Throttle
      
      scrollAnimationId = requestAnimationFrame(() => {
        const scrolled = window.pageYOffset;
        const rate = scrolled * -0.1; // Vitesse de déplacement
        
        cards.forEach((card, index) => {
          const direction = index % 2 === 0 ? 1 : -1; // Direction alternée
          const offset = rate * direction;
          card.style.transform = `translateX(${Math.max(-1.2 * 16, Math.min(1.2 * 16, offset))}px)`; // Limité à ±1.2rem
        });
        
        scrollAnimationId = null;
      });
    }
    
    // Nettoyer les anciens listeners
    if (resizeListener) {
      window.removeEventListener('resize', resizeListener);
    }
    
    window.addEventListener('scroll', updateCardPositions, { passive: true });
    
    // Réinitialiser lors du redimensionnement
    resizeListener = () => {
      if (window.innerWidth <= 768) {
        cards.forEach(card => {
          card.style.transform = 'translateX(0)';
        });
        window.removeEventListener('scroll', updateCardPositions);
        if (scrollAnimationId) {
          cancelAnimationFrame(scrollAnimationId);
          scrollAnimationId = null;
        }
      } else {
        initCardScrollAnimation();
      }
    };
    
    window.addEventListener('resize', resizeListener, { passive: true });
  }
  
  // Initialiser l'animation au chargement
  document.addEventListener('DOMContentLoaded', () => {
    initCardScrollAnimation();
  });

  // Carousel navigation
  function initCarousel() {
    const carousel = document.querySelector('.dispositifs-grid') as HTMLElement;
    if (!carousel) return;
    
    const prevBtn = carousel.querySelector('.prev') as HTMLButtonElement;
    const nextBtn = carousel.querySelector('.next') as HTMLButtonElement;
    const cards = carousel.querySelectorAll('.dispositif-card');

    if (!prevBtn || !nextBtn || !cards.length) return;

    const cardWidth = 393 + 32; // card width + gap

    function scrollToNext() {
      if (carousel) {
        carousel.scrollBy({ left: cardWidth, behavior: 'smooth' });
      }
    }

    function scrollToPrev() {
      if (carousel) {
        carousel.scrollBy({ left: -cardWidth, behavior: 'smooth' });
      }
    }

    // Nettoyer les anciens listeners
    const clonedPrevBtn = prevBtn.cloneNode(true) as HTMLButtonElement;
    const clonedNextBtn = nextBtn.cloneNode(true) as HTMLButtonElement;
    prevBtn.parentNode?.replaceChild(clonedPrevBtn, prevBtn);
    nextBtn.parentNode?.replaceChild(clonedNextBtn, nextBtn);

    clonedPrevBtn.addEventListener('click', scrollToPrev);
    clonedNextBtn.addEventListener('click', scrollToNext);

    // Update button visibility based on scroll position
    let updateTimeoutId: number | null = null;
    
    function updateButtons() {
      if (updateTimeoutId) {
        clearTimeout(updateTimeoutId);
      }
      
      updateTimeoutId = setTimeout(() => {
        if (!carousel || !clonedPrevBtn || !clonedNextBtn) return;
        
        const isAtStart = carousel.scrollLeft <= 1;
        const isAtEnd = carousel.scrollLeft + carousel.clientWidth >= carousel.scrollWidth - 1;
        
        clonedPrevBtn.style.opacity = isAtStart ? '0' : '1';
        clonedPrevBtn.style.pointerEvents = isAtStart ? 'none' : 'auto';
        
        clonedNextBtn.style.opacity = isAtEnd ? '0' : '1';
        clonedNextBtn.style.pointerEvents = isAtEnd ? 'none' : 'auto';
        
        updateTimeoutId = null;
      }, 16); // ~60fps
    }

    carousel.addEventListener('scroll', updateButtons, { passive: true });
    window.addEventListener('resize', updateButtons, { passive: true });
    updateButtons(); // Initial check
  }

  // Initialize carousel when DOM is loaded
  document.addEventListener('DOMContentLoaded', initCarousel);
</script>

