import '../styles/theme.css';

const { title, description, ogTitle, ogDescription, ogImage, canonical } = {
  title: "Tout savoir sur le CIR et le CII - Novaesens",
  description: "Qui est concerné par le crédit Impôt Recherche, crédit impot innovation et JEI, et les critères pour les obtenir",
  ogTitle: "Tout sur le CIR, CII, JEI et agrément CIR - Novaesens",
  ogDescription: "Qui est concerné par le crédit Impôt Recherche, crédit impot innovation et JEI, et les critères pour les obtenir",
