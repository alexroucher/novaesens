---
const { variant, label } = Astro.props;
---

<button
  class={variant === 'cta1' ? 'cta1' : 'cta2'}
  role="button"
  aria-label={label}
>
  {variant === 'cta2' && <span class="chevron">âž”</span>}
  {label}
</button>

<style>
  .cta1 {
    width: 369px;
    height: 83px;
    padding: 30px 30px;
    background-color: var(--novablack);
    color: white;
    border-radius: 8px;
    font-family: 'Jost', sans-serif;
    font-size: var(--font-size-16);
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .cta1::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, var(--novayellow), transparent);
    transition: left 1s ease;
    opacity: 0.1;
  }

  .cta1:hover::before {
    left: 100%;
  }

  @media (max-width: 480px) {
    .cta1 {
      width: 280px;
    }
  }


  .cta2 {
    width: 371px;
    height: 85px;
    padding: 30px 0px;
    background: white;
    color: var(--novablack);
    font-family: 'Jost', sans-serif;
    font-size: var(--font-size-16);
    font-weight: 500;
    border: 1px solid var(--novablack);
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.2s ease;
  }

  .cta2:hover {
    opacity: 0.8;
  }

  .chevron {
    font-size: var(--font-size-20);
  }
  
</style> 