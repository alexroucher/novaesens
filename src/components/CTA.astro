---
const { variant, label } = Astro.props;
---

<button
  class={variant === 'cta1' ? 'cta1' : 'cta2'}
  role="button"
  aria-label={label}
>
  {variant === 'cta2' && <span class="chevron">âž”</span>}
  {label}
</button>

<style>
  .cta1 {
    width: 369px;
    height: 83px;
    padding: 30px 80px;
    background-color: var(--novablack);
    color: white;
    border-radius: 8px;
    font-family: 'Jost', sans-serif;
    font-size: var(--font-size-16);
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .cta1:hover {
    opacity: 0.9;
  }

  .cta2 {
    width: 371px;
    height: 85px;
    padding: 30px 0px;
    background: transparent;
    color: var(--novablack);
    font-family: 'Jost', sans-serif;
    font-size: var(--font-size-16);
    font-weight: 500;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.2s ease;
  }

  .cta2:hover {
    opacity: 0.8;
  }

  .chevron {
    font-size: var(--font-size-20);
  }
</style> 